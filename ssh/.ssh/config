Host *
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_rsa
  IdentityFile ~/.ssh/id_ed25519

Host pea
  Hostname pea.local
  User mstone
  RequestTTY yes 
  RemoteCommand /opt/homebrew/bin/tmux new -A -s stone_ssh
  # remove the TERM lines when xterm-ghostty is included in ssh distros (wait)
  SendEnv TERM
  SetEnv TERM=xterm-256color

Host sand
  Hostname sand.local
  User mstone
  RequestTTY yes 
  SendEnv TERM
  SetEnv TERM=xterm-256color
  RemoteCommand /usr/local/bin/tmux new -A -s stone_ssh
  SendEnv TERM
  SetEnv TERM=xterm-256color

