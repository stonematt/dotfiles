Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519
  IdentitiesOnly yes
  UseKeychain yes

Host foundry
    HostName foundry.nrthe.com
    User ec2-user
    IdentityFile ~/.ssh/foundry.pem 

Host foundry2
    HostName foundry.nrthe.com
    User ec2-user
    IdentityFile /Users/mstone/dev/stone/foundry/foundry.pem


# SSH over Session Manager
host i-* mi-*
    ProxyCommand sh -c "aws ssm start-session --target %h --document-name AWS-StartSSHSession --parameters 'portNumber=%p'"
